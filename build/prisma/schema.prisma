datasource management {
  provider = "postgresql"
  url      = env("PMT_MANAGEMENT_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = env("PMT_OUTPUT")
  binaryTargets = ["native"]
}

model Tenant {
  id    Int    @id @default(autoincrement())
  name  String @unique
  url   String @unique
  users User[] @relation("UserTenant")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String
  email        String    @unique
  password     String?
  provider     String?
  providerId   String?
  refreshToken String?
  lastIp       String?
  language     Language? @default(IT)
  lastTenantId Int?
  lastTenant   Tenant?   @relation(fields: [lastTenantId], references: [id], name: "UserTenant")
}

enum Language {
  EN
  IT
  DE
}
